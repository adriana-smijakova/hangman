<h2>Listing words</h2>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Category</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.content %></td>
        <td>
		<% if word.category != nil %>
		  <%= word.category.name %>
		<% else %>
		  Word has no category
		<% end %>
		</td>
        <td><%= link_to  image_tag('/icons/edit.png'),edit_word_path(word) %></td>
        <td><%= link_to  image_tag('/icons/delete.png'), word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Word', new_word_path %>
