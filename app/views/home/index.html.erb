<h2>Choose game category</h2>
<br/>
<br/>
<% if @categories.empty? %>
Currently there is no category to choose.
<% end %>
<% @categories.each do |category| %>
 
	<a href ="preparation/<%= category.name %>">
	<%if category.icon.empty? || category.icon == ""%>
		<div class="img">
			<img src="images/empty.png" alt= <%= category.name %> width="100" height="100"/>
			<div class="desc">
				<%= category.name %>
			</div>
		</div >
	<%else%>
		<div class="img">
			<img src= <%= category.icon %> alt= <%= category.name %> width="100" height="100"/>
			<div class="desc">
				<%= category.name %>
			</div>
		</div>
	<%end%>
	</a>
 
<% end %>
